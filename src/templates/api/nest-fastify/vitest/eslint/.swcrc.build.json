{
  "$schema": "https://json.schemastore.org/swcrc",
  "sourceMaps": false,
  "module": {
    "type": "es6"
  },
  "exclude": [".spec.ts"],
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    }
  },
  "minify": true
}
